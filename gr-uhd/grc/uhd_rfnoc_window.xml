  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$coeffs_len</vlen>
    <domain>rfnoc</domain>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$coeffs_len</vlen>
    <domain>rfnoc</domain>
  </source>
</block>
