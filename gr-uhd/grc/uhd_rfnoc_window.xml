<?xml version="1.0"?>
<block>
  <name>RFNoC: Window</name>
  <key>uhd_rfnoc_streamer_window</key>
  <import>from gnuradio import uhd</import>
  <import>import numpy as np</import>
  <make>uhd.rfnoc_streamer(
    self.device3,
    "Window_{}".format($block_index),
    uhd.stream_args(
        cpu_format="fc32", \# TODO: This must be made an option
        otw_format="sc16",
        args="window_len=$coeffs_len,spp=$coeffs_len",
    )
)
self.$(id).set_window(np.add(np.multiply($coeffs,2**16), $coeffs))</make>
