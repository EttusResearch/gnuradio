<?xml version="1.0"?>
<block>
  <name>RFNoC: FFT</name>
  <key>uhd_rfnoc_streamer_fft</key>
  <import>from gnuradio import uhd</import>
  <make>uhd.rfnoc_streamer(
    self.device3,
    "FFT_{}".format($block_index),
    uhd.stream_args(
        cpu_format="fc32", \# TODO: This must be made an option
        otw_format="sc16",
        args="fftsize=$fft_size",
    )
)</make>

  <param>
    <name>FFT Size</name>
    <key>fft_size</key>
    <type>enum</type>
    <option>
      <name>256</name>
      <key>256</key>
    </option>
  </param>

  <param>
    <name>FFT Select</name>
    <key>block_index</key>
    <type>enum</type>
    <option>
      <name>0</name>
      <key>0</key>
    </option>
    <option>
      <name>1</name>
      <key>1</key>
    </option>
    <option>
      <name>2</name>
      <key>2</key>
    </option>
    <option>
      <name>3</name>
      <key>3</key>
    </option>
    <option>
      <name>4</name>
      <key>4</key>
    </option>
    <option>
      <name>5</name>
      <key>5</key>
    </option>
    <option>
      <name>6</name>
      <key>6</key>
    </option>
    <option>
      <name>7</name>
      <key>7</key>
    </option>
    <option>
      <name>8</name>
      <key>8</key>
    </option>
    <option>
      <name>9</name>
      <key>9</key>
    </option>
    <option>
      <name>10</name>
      <key>10</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
    <domain>rfnoc</domain>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
    <domain>rfnoc</domain>
  </source>
</block>
